package UDPChat.Server;

import java.util.concurrent.CountDownLatch;

public class Latch 
{
	private static CountDownLatch poll = new CountDownLatch(0);
	private static CountDownLatch ack = new CountDownLatch(0);
	
	public void resetAck()
	{
		ack = new CountDownLatch(1);
	}
	
	public void resetPoll()
	{
		poll = new CountDownLatch(1);
	}
	
	public boolean checkAck()
	{
		if(ack.getCount() == 0)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
	
	public boolean checkPoll()
	{
		if(poll.getCount() == 0)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
}